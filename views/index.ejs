<div class="corp">
      <div class="container">

      <form class="form-signin">
        <h2 class="form-signin-heading">Please sign in</h2>
        <label for="inputName" class="sr-only">Enter Your Name</label>
        <input id="name" class="form-control" placeholder="Enter Your Name" required="" autofocus="">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      </form>
    </div>
  </div>

        <script src="/javascripts/jquery.min.js"></script>
        <script src="/javascripts/socketIoScript.js"></script>
        <script >
        var username;
          var socket=io();
          $('form-signin').submit(function(){
            username=$('#username').val();
            socket.emit('name',{'user':$('#username').val()});
          /*  $('#m').val('');*/
            return false;
          });
          socket.on('chat message', function(msg) {
            $('#messages').append($('<li>').text(msg));
          });
        </script>




